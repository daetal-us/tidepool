html
  padding 0
  margin 0
  font: 1em "Lucida Grande", Helvetica, Arial, sans-serif
  height 100%
  background-repeat no-repeat
  background-attachment fixed
  background-image -webkit-linear-gradient(bottom, rgb(1,6,66) 0%, rgb(51,231,255) 98%)

  body
  	padding 2em
  	color yellow
  	font 1em/1.4em Futura, Century Gothic, Helvetica, Lucida Grande, Arial, sans-serif

	a
		color white
		text-decoration none

	h1
		font-weight normal
		text-align right
		padding 0 1em
		a
			color rgba(1,6,66,.75)

	h2
		color white
		margin 0 0 1em
		font-weight normal
		display block
		font-size 1.4em

	.content
		margin 1em
		padding 1em
		border-radius: 1em
		background rgba(1,6,66,.25)
		height 80%

		.new
			float right

		strong
			color white

		input:focus, textarea:focus
			outline none
			border-color yellow

		input, textarea
			box-sizing border-box
			width 100%
			padding .25em
			background rgba(1,6,66,.25)
			border 0
			color yellow
			font 1em/1.4em Futura, Century Gothic, Helvetica, Lucida Grande, Arial, sans-serif
			font-weight normal
			margin .25em
			border 1px solid transparent
			box-shadow inset 0 0 1em rgba(1,6,66,.5)
			border-radius .25em

		input[type=date], input[type=time], input[type=submit]
			width auto

		input[type=submit], .new
			box-shadow 0 0 1em rgba(1,6,66,.5)
			border-radius .5em
			padding .5em 1em
			cursor pointer
			background yellow
			color rgba(1,6,66,.75)

		.new:active, input[type=submit]:active
			box-shadow none
			position relative
			top 1px